{
  "name": "shopcart-api",
  "version": "0.0.0",
  "private": true,
  "author": {
    "name": "Duong Le",
    "url": "https://github.com/leduong"
  },
  "license": "MIT",
  "engines": {
    "node": "12.x.x",
    "npm": "6.14.x"
  },
  "scripts": {
    "start": "npm run build:prod",
    "build": "npm-run-all clean transpile copy",
    "copy": "cp -R views dist",
    "server": "node ./dist/bin/www.js",
    "build:dev": "NODE_ENV=development npm-run-all build server",
    "build:prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./src --out-dir dist",
    "clean": "rimraf dist",
    "migrate": "npx sequelize-cli db:migrate",
    "dev": "nodemon",
    "eslint:fix": "prettier --write src/;eslint --fix src/",
    "deploy": "git push heroku master",
    "test": "nyc --reporter=html --reporter=text mocha --require test/support/env"
  },
  "dependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.5",
    "cookie-parser": "~1.4.5",
    "cors": "^2.8.5",
    "debug": "~4.1.1",
    "express": "~4.17.1",
    "morgan": "~1.10.0",
    "npm-run-all": "^4.1.5",
    "pg": "^8.3.0",
    "pg-hstore": "^2.3.3",
    "pug": "^3.0.0",
    "request": "^2.88.2",
    "rimraf": "^3.0.2",
    "sequelize": "^6.3.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "after": "0.8.2",
    "mocha": "7.2.0",
    "nyc": "15.0.1",
    "supertest": "4.0.2",
    "sqlite3": "^5.0.0"
  },
  "nodemonConfig": {
    "exec": "npm run build:dev",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,css,scss}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
